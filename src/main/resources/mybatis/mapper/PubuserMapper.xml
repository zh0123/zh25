<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zh.dao.PubuserMapper">

    <select id="getAcct" resultType="com.zh.domain.PubUser">
        select * from account where id=#{id}
    </select>
    <insert id="insert" parameterType="com.zh.domain.PubUser">
        insert into pubuser(username,password,email) values(#{username},#{password},#{email})
    </insert>
    <select id="queryOne" resultType="com.zh.domain.PubUser">
        select * from pubuser where username=#{username} or email=#{email}
    </select>
    <select id="query" resultType="com.zh.domain.PubUser">
        select * from pubuser where username=#{username} and password=#{password}
    </select>



</mapper>