<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zh.dao.UserMapper">


    <insert id="insert" parameterType="com.zh.domain.User">
        insert into user(username,password,email) values(#{username},#{password},#{email})
    </insert>
    <select id="queryOne" resultType="com.zh.domain.User">
        select * from user where username=#{username} or email=#{email}
    </select>
    <select id="query" resultType="com.zh.domain.User">
        select * from user where username=#{username} and password=#{password}
    </select>



</mapper>